{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
